{
  "name": "Deploy",
  "type": "COMPONENT",
  "description": "Install batch script",
  "steps": [
    {
      "name": "Copy Script",
      "plugin": "File Utils",
      "command": "Copy File",
      "properties": {
        "source": "${p:BatchJobComponent/scriptPath}",
        "target": "/opt/batch/run_endofday.sh"
      }
    },
    {
      "name": "Make Executable",
      "plugin": "Shell",
      "command": "Run Shell",
      "properties": {
        "script": "chmod +x /opt/batch/run_endofday.sh"
      }
    }
  ]
}